<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.cardview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/splash"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".publicationDetail"
            android:label="@string/title_activity_publication_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".customizeactivity" />
        <activity
            android:name=".CustomerDetailActivity"
            android:label="@string/title_activity_customer_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Classified_displayActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="94d8bde6e9868f8e5135e58450a48f765c0a4693" />

        <activity android:name=".paymentpage"></activity>
    </application>

</manifest>